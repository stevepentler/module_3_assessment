<div class="container">
  <%= form_tag "/search" %> 
  <%= label_tag "name" %> 
  <%= text_field_tag "name" %> 
  <%= submit_tag "Search" %> 

  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>

